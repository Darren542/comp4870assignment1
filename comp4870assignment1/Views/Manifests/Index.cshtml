@model IEnumerable<ClassLibrary.Models.Manifest>

@{
    ViewData["Title"] = "All Manifests";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Member Email
            </th>
            <th>
                Trip ID
            </th>
            <th>
                Vehicle ID
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            @* <td>
                @Html.DisplayFor(modelItem => item.Member.Id)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Member!.UserName)
            <td>
                @Html.DisplayFor(modelItem => item.Trip!.TripId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle!.VehicleId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ManifestId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ManifestId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ManifestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
